<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Codigo de Producto: "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblCodPro"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="lblCodPro" />

            <TextView
                android:id="@+id/bold6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblEstPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="lblEstPro" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bold5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad de Producto: "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblCantPro"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lblCantPro" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/bold4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Producto: "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblNomPro"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lblNomPro" />
            <TextView
                android:id="@+id/bold3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/. "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblPrePro"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lblPrePro" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/bold2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Codigo de Categoria: "
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblCodCatPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lblCodCatPro" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>